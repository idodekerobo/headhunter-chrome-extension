{
    "manifest_version": 3,
    "name": "LinkedIn Cookie Sync for Headhunting Agent",
    "version": "1.0.0",
    "description": "Automatically sync LinkedIn cookies with your headhunting agent application",
    "permissions": [
      "cookies",
      "activeTab",
      "storage"
    ],
    "host_permissions": [
      "https://*.linkedin.com/*",
      "http://localhost:*/*",
      "https://*.vercel.app/*"
    ],
    "background": {
      "service_worker": "background.js"
    },
    "content_scripts": [
      {
        "matches": ["https://*.linkedin.com/*"],
        "js": ["content.js"],
        "run_at": "document_idle"
      },
      {
        "matches": [
          "http://localhost:*/*",
          "https://headhunter-agent-playground.vercel.app/*"
        ],
        "js": ["agent-content.js"],
        "run_at": "document_idle"
      }
    ],
    "action": {
      "default_popup": "popup.html",
      "default_title": "LinkedIn Cookie Sync"
    },
    "icons": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
    "web_accessible_resources": [
      {
        "resources": ["content.js", "agent-content.js", "bridge.js"],
        "matches": ["https://*.linkedin.com/*", "http://localhost:*/*", "https://*.vercel.app/*"]
      }
    ]
}